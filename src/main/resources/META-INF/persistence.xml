<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <!-- Specify the JPA provider -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <!-- Configure the JDBC properties -->
    <properties>
      <!-- JDBC connection properties -->
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/marjan"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>

      <!-- Hibernate properties -->
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- or validate, create, create-drop -->
      <property name="hibernate.show_sql" value="true"/> <!-- Set to 'true' to enable SQL logging -->
      <property name="hibernate.format_sql" value="true"/> <!-- Set to 'true' to format SQL queries -->
    </properties>
  </persistence-unit>
</persistence>
